    <style>
        .popup {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0,0,0,0.3);
            display: <%= message ? 'block' : 'none' %>;
        }
        .popup .close {
            display: block;
            text-align: center;
            margin-top: 10px;
            background: gray;
            color: white;
            padding: 5px;
            text-decoration: none;
        }
    </style>
</head>
